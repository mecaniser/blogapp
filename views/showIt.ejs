<% include ./partials/header %>

<div class="ui inverted main text container segment">
	<div class="ui inverted orange header "> 
	<h2> <%= blog.title %> </h2> 
	<a class='ui inverted green button right floated' href= "/blogs/<%= blog._id %>/edit" >Edit</a>
	</div>

	<div class="item">
		<img class="ui centered rounded image" src="<%= blog.image %>" alt="blog_img">
		<div class="content">
			<span> <%= blog.created.toDateString() %> </span>
		</div>
		<div class="description">
			<p> <%= blog.body %> </p>
		</div>
		<div class="meta">
			<span>Return</span>
			<a href="/blogs"><%= blog.title %></a>
		</div>
		<form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" accept-charset="utf-8">
			<button class="ui fluid inverted red button ">Delete</button>
		</form>
	</div>
</div>

<% include ./partials/footer %>