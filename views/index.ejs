<% include ./partials/header %>
<div class="ui inverted main text container segment">
	<% blogs.forEach(function(blog){ %>
	<div class="ui inverted red header"><h2><%= blog.title%></h2></div>
	<div class="item"><img class="ui centered rounded image" src="<%= blog.image %>" alt="blog_img"></div>
	<span> <%=blog.created.toDateString()%></span>
	<div class="ui items">
		<div class="description">
			<p><%= blog.body %></p>
		</div>
	</div>
	<a href="/blogs/<%= blog._id %>"> Read more... </a>
</div>
<% }) %>
<% include ./partials/footer %>